    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 1%;
            padding: 0;
            background-color: #f4f4f9;
            color: #333;
            line-height: 1.6;
            width: 98%;
        }

        .article {
            padding: 20px;
            max-width: 600px;
            margin: 20px auto;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .article h1 {
            font-size: 24px;
            text-align: center;
        }

        .article p {
            font-size: 18px;
        }

        .popup-trigger {
            color: #3498db;
            cursor: pointer;
            text-decoration: underline;
        }

        .popup {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            z-index: 1000;
            overflow-y: auto;
        }

        .popup-content {
            background-color: #fff;
            margin: 15% auto;
            padding: 20px;
            width: 90%;
            max-width: 600px;
            border-radius: 10px;
            position: relative;
        }

        .popup-content h2 {
            margin-top: 0;
        }

        .popup-content p {
            margin-bottom: 20px;
        }

        .close {
            position: absolute;
            top: 10px;
            right: 20px;
            font-size: 30px;
            cursor: pointer;
        }
    </style>

    <div class="article">
        <h1>{{article.title}}</h1>
        <p>{{{article.content}}}</p>
    </div>